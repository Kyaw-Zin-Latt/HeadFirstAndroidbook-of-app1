<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#4ACDDC39"
    tools:context=".TabFragment3">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

           <ImageView
            android:id="@+id/imageView1"
            android:layout_width="397dp"
            android:layout_gravity="center"
               android:background="#614CAF50"

               android:layout_height="201dp"
               android:padding="10dp"
               android:src="@drawable/happyhouse"
            android:contentDescription="TODO" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="50dp"
                android:text="Warm and Happy Home"  />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="397dp"
                android:layout_gravity="center"
                android:background="#614CAF50"

                android:layout_height="201dp"
                android:padding="10dp"
                android:src="@drawable/family" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="50dp"
                android:text="Family"  />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="397dp"

                android:layout_gravity="center"
                android:background="#614CAF50"
                android:layout_height="201dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:src="@drawable/married" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="50dp"
                android:text="Married"  />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="397dp"
                android:layout_gravity="center"
                android:background="#614CAF50"
                android:padding="10dp"
                android:layout_height="201dp"
                android:src="@drawable/developer" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="50dp"
                android:text="Software Engineer" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>